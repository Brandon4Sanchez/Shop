@model Project_MVC.Logica.Models.BindingModels.EmployeesCreateBindingModels

@{ 
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@if(ViewBag.Name != null)
{
    <label class="text-success">@ViewBag.Name</label>
}

    <form method="post" action="/Employees/Create">
        <div class="form-row">
            <div class="col.md-12">
                @Html.LabelFor(m => m.Id)
                @Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="col.md-12">
                @Html.LabelFor(m => m.FirsName)
                @Html.EditorFor(m => m.FirsName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirsName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="col.md-12">
                @Html.LabelFor(m => m.SecondName)
                @Html.EditorFor(m => m.SecondName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.SecondName, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="submit" value="Create" class="btn btn-primary"/>
    </form>

